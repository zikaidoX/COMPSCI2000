// Mult.vm

// Declare variables
push static 0 // Push x onto the stack
push static 1 // Push y onto the stack
pop argument 0 // Pop y into ARG 0
pop argument 1 // Pop x into ARG 1
push constant 0 // Initialize the result (a) to 0
pop local 0 // Pop the result into local variable a

// Loop to multiply x and y
label LOOP_START
  // Check if y is zero, if yes, exit the loop
  push argument 1
  if-goto LOOP_END

  // Add x to the result (a) and decrement y by 1
  push local 0
  push argument 0
  add
  pop local 0
  push argument 1
  push constant 1
  sub
  pop argument 1

  // Repeat the loop
  goto LOOP_START

label LOOP_END

// End of multiplication, the result is stored in local variable a
